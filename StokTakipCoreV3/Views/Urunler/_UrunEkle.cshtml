@using EntityLayer.Concrete
@model StokTakipCoreV3.Models.ProductsAndStokView

<!--Yeni Ürün Ekleme Modal -->
@using (Html.BeginForm("UrunEkle", "Urunler", FormMethod.Post, new { @class = "form-inline needs-validation novalidate", role = "form", }))
{

    <div class="modal note-modal-header fade text-left modal-lg" id="Urunekle" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="myModalLabel1">Yeni Ürün Ekle</h5>
                    <button type="button" class="close rounded-pill" data-bs-dismiss="modal"
                        aria-label="Close">
                        <i data-feather="x"></i>
                    </button>
                </div>
                <div class="modal-body">

                    <!-- // Basic multiple Column Form section start -->
                    <section id="multiple-column-form">
                        <div class="row match-height">
                            <div class="col-12">
                                <div class="card">
                                    @*<div class="card-header">*@
                                    @*</div>*@
                                    <div class="card-content">
                                        <div class="card-body">
                                            <form class="form">
                                                <div class="row">

                                                    @Html.TextBoxFor(x => x.Products.ProductsID, new { type = "hidden" })
                                                    <div class="col-md-6 col-12">
                                                        <div class="form-group">
                                                            @Html.LabelFor(x=>x.Products.ProductsMarka)
                                                            <input type="text" required asp-for="Products.ProductsMarka" class="form-control">
                                                            <div class="valid-feedback">
                                                            </div>
                                                            <div class="invalid-feedback">
                                                                @Html.ValidationMessageFor(x => x.Products.ProductsMarka, "", new { @class = "text-danger" })
                                                            </div>

                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 col-12">
                                                        <div class="form-group">
                                                            @Html.LabelFor(x=>x.Products.ProductsMarka)
                                                            <input type="text" required asp-for="Products.ProductsModel" class="form-control">
                                                            <div class="valid-feedback">
                                                            </div>
                                                            <div class="invalid-feedback">
                                                                @Html.ValidationMessageFor(x => x.Products.ProductsModel, "", new { @class = "text-danger" })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
                <div class="modal-footer">
                    <div class="col-12 d-flex justify-content-between">
                        <button type="submit" id="btnRegister" class="btn btn-primary me-1 mb-1">Ekle</button>
                        <button type="reset" class="btn btn-light-secondary me-1 mb-1">Temizle</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function() {
        'use strict'

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll('.needs-validation')

        // Loop over them and prevent submission
        Array.prototype.slice.call(forms)
            .forEach(function(form) {
                form.addEventListener('submit', function(event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })()
    </script>