@model StokTakipCoreV3.Models.UserEditViewModel
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}


<!-- Users Start -->
<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Sisteme Kayıtlı Kullanıcılar</h3>
                <p class="text-subtitle text-muted">Bu sayfada sisteme kayıtlı kullanıcıları görüntüleyebilirsiniz. </p>
            </div>
        </div>
    </div>
    <section class="section">
        <div class="card">
            @*<div class="card-header">

            </div>*@
            <div class="card-body">
                <table class="table table-striped" id="table1">
                    <thead>
                        <tr>
                            <th>Adı</th>
                            <th>Adres</th>
                            <th>Telefon</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.appUsers)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Surname</td>
                                <td>@item.UserName</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <button type="button" class="btn btn-info" data-bs-toggle="modal"
                        data-bs-target="#Musteriekle">
                    Musteri Ekle
                </button>
            </div>
        </div>

    </section>
</div>